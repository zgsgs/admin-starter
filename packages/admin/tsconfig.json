{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client",
      "vue/ref-macros",
      "vitest/importMeta",
      "unplugin-icons/types/vue",
      "unplugin-vue-macros/macros-global",
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
    },
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress"
  ]
}

{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "unplugin-icons/types/vue",
      "vite/client",
      "vue/ref-macros",
      "vitest/importMeta",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client",
      "unplugin-vue-define-options"
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "packages/**/*.ts",
    "mock/**/*.ts",
    "test/**/*.ts",
    "unocss.config.ts",
    "types/**/*.d.ts",
    ".env.config.*",
    "vite.config.*",
  ],
  "exclude": [
    "/dist/**",
    "node_modules",
    "cypress"
  ]
}
